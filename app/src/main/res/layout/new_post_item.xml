<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorSecondaryLight"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <de.fwpm.android.fefesblog.utils.PreventScrollTextView
        android:id="@+id/post_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="14sp"
        android:lineSpacingExtra="2dp"
        android:animateLayoutChanges="true"
        android:textColor="@color/colorPrimary"
        android:textColorLink="@color/colorAccent"
        android:maxLines="6"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="4dp">

        <ImageButton
            android:id="@+id/bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:backgroundTint="@color/colorSecondary"
            android:tint="@color/colorLight"
            android:elevation="0.5dp"
            android:src="@drawable/ic_stat_bookmark_border" />

        <ImageButton
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/bookmark"
            android:backgroundTint="@color/colorSecondary"
            android:tint="@color/colorLight"
            android:elevation="0.5dp"
            android:src="@drawable/ic_stat_share" />

        <TextView
            android:id="@+id/update_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/expand"
            android:paddingRight="8dp"
            android:visibility="gone"
            android:text="Update!" />

        <ImageButton
            android:id="@+id/expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:backgroundTint="@color/colorSecondary"
            android:tint="@color/colorLight"
            android:elevation="0.5dp"
            android:src="@drawable/ic_stat_keyboard_arrow_down" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLight"/>

</LinearLayout>